---
import RootLayout from '../layouts/root.astro';
import logo from '../logo.svg';
---

<RootLayout title="moeriki">
	<div class="grid">
		<header>
			<div class="logo">
				<img
					alt="My logo which is a vector illustation of a brown spider-monkey with its head drawn in such a way that it resembles my human head."
					src={logo}
				/>
			</div>
			<div class="title">
				<h1>moeriki</h1>
				<small><abbr title="Also Known As">a.k.a.</abbr> Dieter Luypaert</small>
			</div>
		</header>
	</div>
</RootLayout>

<style>
	.grid {
		display: grid;
		gap: var(--gutter);
		margin: var(--gutter);
	}

	header {
		display: contents;
	}

	.logo {
		background-color: tomato;
		border-radius: 50%;
		border: 20px solid white;
		box-shadow: 0 0 0 5px black;

		& img {
			aspect-ratio: 1 / 1;
			scale: 1.05;
			translate: -2.5% 7.5%;
		}
	}

	@supports (border-radius: 50cqmin) {
		.logo {
			border-radius: 50cqmin;

			& img {
				aspect-ratio: initial;
				scale: initial;
				translate: -7.5% 7.5%;
			}
		}
	}

	.title {
		text-align: center;
		line-height: 1;

		& h1 {
			font-size: var(--step-5);
			font-weight: 700;
		}

		& small {
			font-size: var(--step--1);
			font-style: italic;
			font-weight: 400;
		}
	}

	@media (min-width: 550px) {
		.grid {
			grid-template-columns: min(400px, 50%) 1fr;
		}
		.title {
			text-align: right;
		}
	}
</style>
